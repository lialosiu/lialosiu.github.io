.site-footer {
  margin-top: 30px;
  padding: 30px 0;
  display: block;
  text-align: center;
  color: #fff;
  font-family: 'miso-light', monospace;
  font-size: 1.5em;
  background: linear-gradient(to right, #344955, #435160);
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);

  a {
    color: #fdbc78;
    transition: color .3s;

    &:hover {
      color: #fd7878
    }
  }
}