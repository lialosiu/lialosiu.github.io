.site-header {
  position: relative;
  box-shadow: 0px 1px 5px 0px rgba(0,0,0,0.6);
  z-index: 10;

  .header-img {
    min-height: 400px;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2) 50px, rgba(0, 0, 0, 0.05));
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #fff;
    text-shadow: 0 0 3px #000;

    .post-title {
      font-size: 2.6em;
      max-width: 80%;
    }

    .post-subtitle {
      font-size: 1.2em;
      max-width: 80%;
    }
  }
}