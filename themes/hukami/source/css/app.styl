font-size = 14px;
line-height = 1.4em;
article-padding = 30px;
font-mono = "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace;
box-shadow = 1px 1px 4px 0 rgba(0, 0, 0, 0.3);

@font-face
  font-family: miso-light
  font-style: normal
  font-weight: normal
  src: url("../fonts/miso-light/miso-light.eot")
  src: url("../fonts/miso-light/miso-light.eot?#iefix") format("embedded-opentype"),
          url("../fonts/miso-light/miso-light.woff") format("woff"),
          url("../fonts/miso-light/miso-light.ttf") format("truetype"),
          url("../fonts/miso-light/miso-light.svg#fontawesomeregular") format("svg")

body {
  font-family: 'Microsoft YaHei UI Light', Lato, 'Helvetica Neue', Arial, Helvetica, sans-serif;
  font-size: font-size;
  background: linear-gradient(to right, #31303b, #363540);
  #app {
    height 100%;
  }
}

h1, h2, h3, h4, h5 {
  font-family: 'Microsoft YaHei UI Light', Lato, 'Helvetica Neue', Arial, Helvetica, sans-serif;
}

.ui.top.fixed.menu {
  z-index: 802;
  height: 50px;
  background: linear-gradient(to right, #393d47 0, #393d47 1210px, #393d47 1210px, rgba(94, 107, 120, 0.9));
  box-shadow: 0 0 10px #1b1d24;
  .site-name-area {
    display: flex;
    align-items: flex-end;
    .site-master-avatar {
      margin-left: 0.5em;
      margin-right: 0.5em;
      border-radius: 50%;
    }
    .site-title {
      font-size: 1.2em;
    }
    .site-subtitle {
      font-size: 0.8em;
      &:before {
        content: '-';
        margin: 0 .5em;
      }
    }
  }
  .site-top-link {
    > i.icon {
      font-size: 1.6em;
    }
    .text {
      font-family: miso-light, monospace;
      font-size: 12px;
      color: #ccc;
      position: relative;
      bottom: -4px;
      left: 6px;
      display: flex;
      align-items: flex-end;
      height: 100%;
      &:before {
        content: '';
        border-left: 1px solid;
        transform: rotate(30deg);
        height: 100%;
        position: absolute;
        bottom: -2px;
        left: -5px;
      }
    }
  }
  &.blur {
    filter: blur(3px);
    background: transparent;
  }
  &:not(.blur) {
    //background: alpha(#fff, 0.95);
  }
  .clock {
    font-family: miso-light, monospace;
    font-size: 1.4em;
    padding: 0 1em;
  }
}

.body {
  min-height: 100%;
  padding-top: 50px;
  display: flex;
  flex-direction: row;
  .left-side {
    background: transparent;
    flex: 1 1;
  }
  .right-side {
    background: transparent;
    flex: 1 1;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    .right-side-assistance {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      width: 150px;
      @media screen and (max-width: 1500px) {
        display: none;
      }
      > a {
        width: 100%;
        margin: 10px 0;
        padding: 1px;
        border-radius: 3px 0 0 3px;
        border-left: 3px solid;
        background: #fefefe;
        box-shadow: box-shadow;
        transition: color 0.3s;
        color: #8b949d;
        &:hover {
          color: #ffd9cc;
        }
        > img {
          display: block;
          width: 100%;
        }
      }
    }
  }
  .main-side {
    flex: 0 1 1000px;
  }
}

.site-footer {
  margin-top: 30px;
  padding: 30px 0;
  display: block;
  text-align: center;
  color: #aaa;
  border-top: 1px dashed #666;
  font-family: miso-light, monospace;
  font-size: 1.5em;
  a {
    color: #858bc7;
  }
}

.article {
  display: flex;
  flex-direction: column;
  width: 1200px;
  @media screen and (max-width: 1600px) {
    width: 1000px;
  }
  padding: 30px 0;
  position: relative;
  .article-header {
    position: absolute;
    left: -150px;
    width: 1380px;
    @media screen and (max-width: 1600px) {
      width: 1180px;
    }
    @media screen and (max-width: 1400px) {
      left: -30px;
      width: 1060px;
    }
    padding: 12px 20px 12px 20px;
    z-index: 801;
    text-align: left;
    white-space: nowrap;
    background: linear-gradient(to right, #454b55, #55616d);
    box-shadow: 1px 3px 2px 0px rgba(50, 49, 59, 0.85);
    border-left: 5px solid #6894e6;
    border-right: 5px solid #9ebdd7;
    border-radius: 3px;
    color: whitesmoke;
    a {
      color: #73b3e9;
      &:hover {
        color: #e96b6b;
      }
    }
    h1 {
      font-size: 1.6em;
    }
    &.ui.sticky.bound.bottom {
      display: none;
    }
  }
  &.article-type-assistance {
    .article-header {
      left: -30px
      width: 1270px;
      @media screen and (max-width: 1600px) {
        width: 1060px;
      }
    }
  }
  .article-inner {
    display: flex;
    flex-direction: row;
    .article-left-side {
      width: 150px;
      margin-top: 50px;
      padding: 0 15px 20px 15px;
      color: #fff;
      text-align: right;
      overflow: visible;
      position: absolute;
      left: -150px;
      @media screen and (max-width: 1400px) {
        display: none;
      }
      .article-meta {
        margin-top: 15px;
        &.ui.sticky.bound.bottom {
          display: none;
        }
      }
      a {
        color: #7abcff;
        transition: color .3s;
        &:hover {
          color: #ff6c7f;
        }
      }
      .rotate {
        transform: rotate(-10deg);
        margin-left: -18px;
        margin-right: -18px;
        padding: 6px 15px;
      }
      .article-date {
        font-size: 1.2em;
        font-family: miso-light, monospace;
      }
    }
    .article-entry {
      width: 100%;
      margin-top: 50px;
      padding: 10px article-padding;
      background-color: rgba(255, 255, 255, 0.9);
      box-shadow: box-shadow;
      border-radius: 0 0 5px 5px;
      text-shadow: 0 0 0px rgba(0, 0, 0, 0.5);
      a {
        border-bottom: 1px dashed;
        margin-bottom: -1px;
        transition: color .3s;
        &:hover {
          color: crimson;
        }
      }
      p {
        margin: 1em 0;
      }
      hr {
        border-top: 1px dashed;
        margin: 2em 0;
      }
      img {
        max-width: 100%;
        border: 1px solid #aaa;
        background: #eee;
        margin: 10px 0;
        border-radius: 3px;
        box-shadow: box-shadow;
      }
    }
    .article-footer {
      margin: 30px 0;
    }
  }
  &.article-type-assistance {
    .article-entry {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: stretch;
      > p {
        margin: 1em;
        flex: 1 1 40%;
        text-align: center;
        a {
          display: inline-block;
          border-bottom: none;
          img {
            width: 100%;
            height: auto;
          }
        }
      }
    }
  }
}

