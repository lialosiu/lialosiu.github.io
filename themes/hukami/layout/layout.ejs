<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= config.title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/semantic-ui/2.2.6/semantic.min.css">
    <%- css('css/app') %>
</head>
<body>
<div id="app">
    <div class="ui top fixed menu blur">
    </div>
    <div class="ui top fixed borderless menu">
        <div class="item site-name-area">
            <a href="<%- url_for() %>" class="site-title"><%= config.title %></a>
            <% if (theme.subtitle){ %>
            <a href="<%- url_for() %>" class="site-subtitle"><%= theme.subtitle %></a>
            <% } %>
        </div>
        <div class="right menu">
            <a class="item clock" v-cloak>{{ nowDatetime }}</a>
        </div>
    </div>
    <div class="body">
        <div class="left-side">
            <%- body %>
        </div>
        <div class="right-side-assistance">
            <% if (site && site.data && site.data['right-side-assistance']) { %>
            <% for (var key in site.data['right-side-assistance']) { %>
            <% if (!site.data['right-side-assistance'].hasOwnProperty(key)) continue %>
            <% var item = site.data['right-side-assistance'][key] %>
            <a href="<%= item.href %>"><img src="<%= item.image %>" alt="<%= item.alt %>"></a>
            <% } %>
            <% } %>
        </div>
    </div>
</div>
</body>
<script src="https://cdn.jsdelivr.net/momentjs/2.17.1/moment.min.js"></script>
<script src="https://cdn.jsdelivr.net/vue/2.1.10/vue.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery/3.1.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/semantic-ui/2.2.6/semantic.min.js"></script>
<%- js('js/app') %>
</html>
